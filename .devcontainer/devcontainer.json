// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/debian
{
	"name": "qr_ngp_cloud_platform",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"build": {
		// Sets the run context to one level up instead of the .devcontainer folder.
		"context": "..",
		// Update the 'dockerFile' property if you aren't using the standard 'Dockerfile' filename.
		"dockerfile": "Dockerfile"
	},
	"features": {
		// "ghcr.io/dhoeric/features/google-cloud-cli:1": {} # TODO: Not working currently, looks like installing this way has issues
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-azuretools.vscode-docker",
				"eamodio.gitlens",
				"github.vscode-github-actions",
				"esbenp.prettier-vscode",
				"ms-kubernetes-tools.vscode-kubernetes-tools",
				"tim-koehler.helm-intellisense",
				"mutantdino.resourcemonitor",
			],
			"settings": {
				"http.proxySupport": "off",
				"http.proxyStrictSSL": false,
			}
		}
	},
	"mounts": [
		"source=${localEnv:HOME}/.kube,target=/root/.kube,type=bind",
		// "source=${localEnv:HOME}/.ssh,target=/root/.ssh,type=bind,readonly",
		"source=${localEnv:HOME}/.docker,target=/root/.docker,type=bind",
		"source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind",
		// "source=${localEnv:HOME}/.azure,target=/root/.azure,type=bind",
		// "source=${localEnv:HOME}/.aws,target=/root/.aws,type=bind",
		"source=${localEnv:HOME}/.config/gcloud,target=/root/.config/gcloud,type=bind",
	],

	// Features to add to the dev container. More info: https://containers.dev/features.
	// "features": {},

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],

	// Configure tool-specific properties.
	// "customizations": {},

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	"remoteUser": "root"
}
